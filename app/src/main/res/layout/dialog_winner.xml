<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#fff"
    android:gravity="center_horizontal">
    
    <TextView
        android:id="@+id/tv_rank_1"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="第一呀~"
        android:textSize="18sp"
        android:textColor="#000"
        android:drawableLeft="@drawable/icon_ranking_1"
        android:drawablePadding="5dp"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/tv_rank_2"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="第二呀~"
        android:textSize="18sp"
        android:textColor="#000"
        android:drawableLeft="@drawable/icon_ranking_2"
        android:drawablePadding="5dp"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/tv_rank_3"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="第三呀~"
        android:textSize="18sp"
        android:textColor="#000"
        android:drawableLeft="@drawable/icon_ranking_3"
        android:drawablePadding="5dp"
        android:layout_margin="5dp"/>

    <Button
        android:id="@+id/btn_restart"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_margin="5dp"
        android:text="重新开始"
        android:textColor="#fff"
        android:background="@drawable/btn_bg" />

</LinearLayout>